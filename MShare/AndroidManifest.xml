<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mshare.main"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>

    <!-- NFC并不是必须的 -->
    <uses-feature android:name="android.hardware.nfc" android:required="false"/>
    
    <supports-screens
        android:anyDensity="true" />
    
    <application
        android:name="org.mshare.main.MShareApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <!-- 修改服务器配置 -->
        <activity
            android:name="org.mshare.preference.ServerSettingActivity"
			android:label="@string/activity_label_server_setting" >
		</activity>
		
		<!-- 用于显示登录二维码的Activity -->
		<activity
            android:name="org.mshare.main.QRCodeConnectActivity"
            android:label="@string/activity_label_qrcode_connect">
		</activity>
		
		<!-- 二维码扫描 -->
		<activity
            android:name="org.mshare.scan.ScanActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait">
        </activity>
        
		<!-- p2p测试用Activiy -->
        <activity 
            android:name="org.mshare.p2p.P2pActivity"
            android:label="P2P" >
		</activity>
		<activity
            android:name="org.mshare.main.FtpMainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="org.mshare.main.FtpFileManage"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="org.mshare.nfc.NfcServerActivity"
            android:label="@string/activity_label_nfc" >
        </activity>
        
        <!-- 播放的Activity -->
        <activity
            android:name="org.mshare.live.PlayActivity"
            android:label="@string/activity_label_play_video" >
        </activity>
        <activity
            android:name="org.mshare.live.LiveActivity"
            android:label="@string/activity_label_play_video" >
        </activity>
        
        <!-- 安全加密的测试Activity -->
        <activity
            android:name="org.mshare.secure.AESCodeTest"
            android:label="加密测试" >
        </activity>
        
        <!-- 显示基本信息的Activity -->
        <activity
            android:name="org.mshare.main.OverviewActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 测试图片显示 -->

        <!-- 本地文件浏览 -->
        <activity
            android:name="org.mshare.main.FileBrowserActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="org.mshare.main.BasicConnectActivity"
            android:label="@string/app_name" >
        </activity>

        <receiver
            android:name="org.mshare.server.ftp.RequestStartStopReceiver"
            >
            <intent-filter>
                <action android:name="org.mshare.ftp.server.ACTION_START_FTPSERVER"/>
                <action android:name="org.mshare.ftp.server.ACTION_STOP_FTPSERVER"/>
            </intent-filter>
        </receiver>
        
        <service android:name="org.mshare.server.ServerService"></service>
        
    </application>

</manifest>
