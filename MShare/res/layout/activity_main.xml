<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <HorizontalScrollView
		android:id="@+id/remote_crumb_scroller"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:layout_above="@+id/gvFileBrowser"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_toLeftOf="@+id/preFolder"
	    >
	    <LinearLayout
	        android:id="@+id/remote_crumb_container"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" 
	        >
	    </LinearLayout>
	</HorizontalScrollView>

    <Button
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/preFolder"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="上传" />

    <Button
        android:id="@+id/preFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/upload"
        android:text="后退"
        android:textColor="#fff" />
    
    <GridView
        android:id="@+id/gvFileBrowser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/upload"
        android:clickable="true"
        android:columnWidth="90dp"
        android:horizontalSpacing="10dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:textColor="#ff000000"
        android:verticalSpacing="10dp" />

	<TextView
	    android:id="@+id/tvEmpty"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_centerInParent="true"
	    android:gravity="center"
	    android:text="文件夹为空"
	    android:textSize="18sp"
	    android:textStyle="bold"
	    android:visibility="gone" >
	</TextView>

	<ImageView
	    android:id="@+id/dividing "
	    android:layout_width="fill_parent"
	    android:layout_height="1dip"
	    android:layout_alignBottom="@+id/upload"
	    android:layout_alignParentRight="true"
	    android:background="#009bfe" />

</RelativeLayout>
